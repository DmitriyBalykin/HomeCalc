<UserControl x:Class="HomeCalc.View.Controls.AddDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="850">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/HomeCalc.View;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid
        Style="{StaticResource BasicGridStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock
            Grid.Row="0" Grid.Column="0"
            Text="Дата"
            />
        <TextBlock
            Grid.Row="0" Grid.Column="1"
            Text="Тип покупки"
            />
        <TextBlock
            Grid.Row="0" Grid.Column="2"
            Text="Название покупки"
            />
        <TextBlock
            Grid.Row="0" Grid.Column="3"
            Text="Количество"
            />
        <TextBlock
            Grid.Row="0" Grid.Column="4"
            Text="Цена за единицу"
            />
        <TextBlock
            Grid.Row="0" Grid.Column="5"
            Text="Общая цена"
            />
        
        <DatePicker
            Grid.Row="1" Grid.Column="0"
            SelectedDate="{Binding DateToStore}"
            />
        <ComboBox
            Grid.Row="1" Grid.Column="1"
            ItemsSource="{Binding TypeSelectorItems}"
            SelectedItem="{Binding PurchaseType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            DisplayMemberPath="Name"
            />
        <ToggleButton x:Name="CalcNumberToggle" Grid.Row="1" Grid.Column="3" Grid.RowSpan="2" IsChecked="{Binding IsCalcItemsCount}">
            <TextBlock Text="Считать"  Margin="0,8" />
        </ToggleButton>

        <ToggleButton x:Name="CalcItemToggle" Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" IsChecked="{Binding IsCalcItemCost}">
            <TextBlock Text="Считать"  Margin="0,8" />
        </ToggleButton>

        <ComboBox Grid.Row="1" Grid.Column="2"
                  Text="{Binding PurchaseName}"
                  IsEditable="True"
                  MaxDropDownHeight="200"/>
        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding ElementName=CalcNumberToggle, Path=IsChecked }" />
        <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding ItemCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding ElementName=CalcItemToggle, Path=IsChecked }"  />
        <TextBox Grid.Row="1" Grid.Column="5" Text="{Binding TotalCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsCalcByTotal, Converter={StaticResource inverseBooleanConverter}}"/>
        <Button Grid.Row="1" Grid.Column="6" Content="Сохранить" Command="{Binding Save}" />

        
    </Grid>
</UserControl>
